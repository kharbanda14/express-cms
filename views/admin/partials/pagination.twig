<ul class="pagination">
    <li class="page-item"><a class="page-link" href="?page=1">Start</a></li>
    {% for i in 1..max_page %}
        <li class="page-item {{ i == current ? 'active' :'' }}"><a class="page-link" href="?page={{i}}">{{i}}</a></li>
    {% endfor %}
    <li class="page-item"><a class="page-link" href="?page={{max_page}}">End</a></li>
</ul>