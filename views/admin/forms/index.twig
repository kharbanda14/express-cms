{% extends 'admin/index.twig' %}

{% block additional_css %}
<link rel="stylesheet" href="/admin_assets/vendors/simplemde/dist/simplemde.min.css">
{% endblock %}
{% block additional_js %}
<script src="/admin_assets/vendors/simplemde/dist/simplemde.min.js"></script>
<script>
    window.onload = function () {
        var simplemde = new SimpleMDE({
            element: document.getElementById('content')
        });
    }
</script>
{% endblock %}

{% block body %}
<h2>Create Form</h2>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {% if form_success.length > 0 %}
                <div class="alert alert-success">{{form_success}}</div>
                {% endif %}
                <form method="POST">
                    <div class="form-group">
                        <label for="title">
                            <h4>Title</h4>
                        </label>
                        <input type="text" name="title" value="{{existing_data.title}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="description">
                            <h4>Description</h4>
                        </label>

                        <textarea type="text" id="content" class="form-control" name="description">{{existing_data.description}}</textarea>
                    </div>
                    {{_csrfInput}}
                    <input type="submit" value="{{form_btn_text}}" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                
            </div>
        </div>
    </div>
</div>
{% endblock %}