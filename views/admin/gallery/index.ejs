<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary float-right">
                    <i class="fa fa-plus"></i>
                    ADD IMAGES
                </button>
            </div>
            <div class="col-md-12 mt-2">
                <form method="post" enctype="multipart/form-data">
                    <div class="input-group">
                        <input type="file" name="images" id="images" multiple>
                    </div>
                    <%- _csrfInput %>
                    <input type="submit" class="btn btn-primary" value="Upload">
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4>Images</h4>
        <div class="col-md-12">
            <div class="row">
            <% if (locals.gallery) {
                gallery.forEach(function (img) { %>
                    <div class="col-md-3 each_gallery_img">
                        <img class="gallery_img" src="<%= img.medium%>" alt="" srcset="">
                    </div>
               <% }) }%>
            </div>
        </div>
    </div>
</div>