{% extends 'admin/index.twig'%}

{% block body %}

<h1>{{post_type.nice_name }}
    ({{ post_count }})</h1>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>No.</th>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                    {% for post in posts %}
                    <tr>
                        <td>{{start_i + 1}}</td>
                        <td>{{post._id }}</td>
                        <td>{{post.title }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/{{post.slug }}" class="btn btn-success">
                                    <i class="fa fa-eye"></i>
                                    View</a>
                                <a href="{{ admin_baseurl }}/cms/{{post_type.type }}/edit/{{post._id }}" class="btn btn-primary">
                                    <i class="fa fa-pencil"></i>
                                    Edit</a>
                                <a href="" class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                    Delete</a>
                            </div>
                        </td>
                    </tr>
                    {% set start_i = start_i + 1 %}
                    {% endfor %}

                </table>
                {% include "admin/partials/pagination.twig" with {max_page:max_page, current : page} %}
            </div>
        </div>
    </div>
</div>
{% endblock %}