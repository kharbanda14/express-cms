<h1><%= post_type.nice_name %> (<%= post_count %>)</h1>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>No.</th>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                    <% posts.forEach((post,index) => { %>
                       <tr>
                           <td><%= index+1 %></td>
                           <td><%= post._id %></td>
                           <td><%= post.title %></td>
                           <td>
                               <div class="btn-group">
                                   <a href="/<%= post.slug %>" class="btn btn-success"> <i class="fa fa-eye"></i> View</a>
                                   <a href="<%= admin_baseurl+'/cms/'+post_type.type+'/edit/'+post._id %>" class="btn btn-primary"> <i class="fa fa-pencil"></i> Edit</a>
                                   <a href="" class="btn btn-danger"> <i class="fa fa-trash"></i> Delete</a>
                               </div>
                           </td>
                       </tr> 
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
</div>